{
    "version": 8,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "host-base",
            "hidden": true,
            "displayName": "Host (native)",
            "description": "Default host toolchain (requires Ninja).",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
                "MODBUS_ENABLE_TESTS": "ON"
            }
        },
        {
            "name": "host-debug",
            "displayName": "Host Debug",
            "description": "Debug build with tests enabled",
            "inherits": "host-base"
        },
        {
            "name": "host-client-only",
            "displayName": "Host Client Only",
            "description": "Client-only build disabling server components",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_SERVER": "OFF"
            }
        },
        {
            "name": "host-server-only",
            "displayName": "Host Server Only",
            "description": "Server-only build disabling client components",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_CLIENT": "OFF"
            }
        },
        {
            "name": "host-rtu-only",
            "displayName": "Host RTU Only",
            "description": "Build with only RTU transport enabled",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_TRANSPORT_ASCII": "OFF",
                "MODBUS_ENABLE_TRANSPORT_TCP": "OFF"
            }
        },
        {
            "name": "host-tcp-only",
            "displayName": "Host TCP Only",
            "description": "Build with only TCP transport enabled",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_SERVER": "OFF",
                "MODBUS_ENABLE_TRANSPORT_RTU": "OFF",
                "MODBUS_ENABLE_TRANSPORT_ASCII": "OFF"
            }
        },
        {
            "name": "host-debug-examples",
            "displayName": "Host Debug (examples)",
            "description": "Debug build with examples enabled",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_BUILD_EXAMPLES": "ON"
            }
        },
        {
            "name": "host-release",
            "displayName": "Host Release",
            "description": "Optimised build without tests",
            "inherits": "host-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MODBUS_ENABLE_TESTS": "OFF"
            }
        },
        {
            "name": "host-footprint",
            "displayName": "Host Footprint Probe",
            "description": "MinSizeRel build tuned for footprint metrics",
            "inherits": "host-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "MODBUS_ENABLE_TESTS": "OFF",
                "MODBUS_PROFILE": "LEAN",
                "MODBUS_INSTALL": "ON"
            }
        },
        {
            "name": "host-asan",
            "displayName": "Host ASan/UBSan",
            "description": "Debug build with sanitizers",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_ASAN": "ON",
                "MODBUS_ENABLE_UBSAN": "ON"
            }
        },
        {
            "name": "host-tsan",
            "displayName": "Host ThreadSanitizer",
            "description": "Debug build with ThreadSanitizer for concurrency testing",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_TSAN": "ON"
            }
        },
        {
            "name": "host-coverage",
            "displayName": "Host Coverage",
            "description": "Debug build with gcov/lcov instrumentation",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_COVERAGE": "ON",
                "MODBUS_BUILD_EXAMPLES": "ON"
            }
        },
        {
            "name": "host-fuzz",
            "displayName": "Host Fuzzers",
            "description": "Build libFuzzer harnesses",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_BUILD_FUZZERS": "ON",
                "MODBUS_ENABLE_TESTS": "OFF"
            }
        },
        {
            "name": "host-docs",
            "displayName": "Host Documentation",
            "description": "Debug build with documentation enabled",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_BUILD_DOCS": "ON",
                "MODBUS_ENABLE_TESTS": "OFF"
            }
        },
        {
            "name": "mingw-base",
            "hidden": true,
            "displayName": "GCC 13.2.0 x86_64-w64-mingw32 (ucrt64)",
            "description": "MinGW/ucrt64 toolchain",
            "generator": "MinGW Makefiles",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/install/${presetName}",
                "CMAKE_C_COMPILER": "C:/msys64/ucrt64/bin/gcc.exe",
                "CMAKE_CXX_COMPILER": "C:/msys64/ucrt64/bin/g++.exe",
                "CMAKE_MAKE_PROGRAM": "C:/msys64/ucrt64/bin/mingw32-make.exe",
                "MODBUS_ENABLE_TESTS": "ON"
            }
        },
        {
            "name": "mingw-debug",
            "displayName": "MinGW Debug",
            "inherits": "mingw-base"
        },
        {
            "name": "mingw-release",
            "displayName": "MinGW Release",
            "inherits": "mingw-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MODBUS_ENABLE_TESTS": "OFF"
            }
        },
        {
            "name": "stm32g0-tiny",
            "displayName": "STM32G0 TINY Profile",
            "description": "Minimal footprint for STM32G0 (Cortex-M0+)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/stm32g0-tiny",
            "toolchainFile": "${sourceDir}/cmake/toolchains/stm32g0.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "MODBUS_PROFILE": "TINY",
                "MODBUS_ENABLE_CLIENT": "ON",
                "MODBUS_ENABLE_SERVER": "OFF",
                "MODBUS_TRANSPORT_RTU": "ON",
                "MODBUS_TRANSPORT_TCP": "OFF",
                "MODBUS_TRANSPORT_ASCII": "OFF",
                "MODBUS_ENABLE_TESTS": "OFF",
                "MODBUS_BUILD_EXAMPLES": "OFF"
            }
        },
        {
            "name": "stm32g0-lean",
            "displayName": "STM32G0 LEAN Profile",
            "description": "Balanced configuration for STM32G0",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/stm32g0-lean",
            "toolchainFile": "${sourceDir}/cmake/toolchains/stm32g0.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "MODBUS_PROFILE": "LEAN",
                "MODBUS_ENABLE_CLIENT": "ON",
                "MODBUS_ENABLE_SERVER": "ON",
                "MODBUS_TRANSPORT_RTU": "ON",
                "MODBUS_TRANSPORT_TCP": "OFF",
                "MODBUS_ENABLE_TESTS": "OFF",
                "MODBUS_BUILD_EXAMPLES": "OFF"
            }
        },
        {
            "name": "esp32c3-lean",
            "displayName": "ESP32-C3 LEAN Profile",
            "description": "Balanced configuration for ESP32-C3 (RISC-V)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/esp32c3-lean",
            "toolchainFile": "${sourceDir}/cmake/toolchains/esp32c3.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MODBUS_PROFILE": "LEAN",
                "MODBUS_ENABLE_CLIENT": "ON",
                "MODBUS_ENABLE_SERVER": "ON",
                "MODBUS_TRANSPORT_RTU": "ON",
                "MODBUS_TRANSPORT_TCP": "ON",
                "MODBUS_TRANSPORT_ASCII": "OFF",
                "MODBUS_ENABLE_TESTS": "OFF",
                "MODBUS_BUILD_EXAMPLES": "OFF"
            }
        },
        {
            "name": "esp32c3-full",
            "displayName": "ESP32-C3 FULL Profile",
            "description": "Full-featured configuration for ESP32-C3",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/esp32c3-full",
            "toolchainFile": "${sourceDir}/cmake/toolchains/esp32c3.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MODBUS_PROFILE": "FULL",
                "MODBUS_ENABLE_CLIENT": "ON",
                "MODBUS_ENABLE_SERVER": "ON",
                "MODBUS_TRANSPORT_RTU": "ON",
                "MODBUS_TRANSPORT_TCP": "ON",
                "MODBUS_TRANSPORT_ASCII": "ON",
                "MODBUS_ENABLE_TESTS": "OFF",
                "MODBUS_BUILD_EXAMPLES": "OFF"
            }
        },
        {
            "name": "nrf52-full",
            "displayName": "nRF52 FULL Profile",
            "description": "Full-featured configuration for nRF52 (Cortex-M4F)",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/nrf52-full",
            "toolchainFile": "${sourceDir}/cmake/toolchains/nrf52.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "MODBUS_PROFILE": "FULL",
                "MODBUS_ENABLE_CLIENT": "ON",
                "MODBUS_ENABLE_SERVER": "ON",
                "MODBUS_TRANSPORT_RTU": "ON",
                "MODBUS_TRANSPORT_TCP": "ON",
                "MODBUS_TRANSPORT_ASCII": "OFF",
                "MODBUS_ENABLE_TESTS": "OFF",
                "MODBUS_BUILD_EXAMPLES": "OFF",
                "MB_CONF_DIAG_ENABLE_COUNTERS": "ON",
                "MB_CONF_DIAG_ENABLE_TRACE": "ON"
            }
        },
        {
            "name": "nrf52-lean",
            "displayName": "nRF52 LEAN Profile",
            "description": "Balanced configuration for nRF52",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/nrf52-lean",
            "toolchainFile": "${sourceDir}/cmake/toolchains/nrf52.cmake",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "MinSizeRel",
                "MODBUS_PROFILE": "LEAN",
                "MODBUS_ENABLE_CLIENT": "ON",
                "MODBUS_ENABLE_SERVER": "ON",
                "MODBUS_TRANSPORT_RTU": "ON",
                "MODBUS_TRANSPORT_TCP": "OFF",
                "MODBUS_ENABLE_TESTS": "OFF",
                "MODBUS_BUILD_EXAMPLES": "OFF"
            }
        },
        {
            "name": "host-compat",
            "displayName": "Host Debug (compat)",
            "description": "Debug build with libmodbus compatibility layer enabled",
            "inherits": "host-base",
            "cacheVariables": {
                "MODBUS_ENABLE_COMPAT_LIBMODBUS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "host-debug",
            "displayName": "Build Host Debug",
            "configurePreset": "host-debug"
        },
        {
            "name": "host-client-only",
            "displayName": "Build Host Client Only",
            "configurePreset": "host-client-only"
        },
        {
            "name": "host-server-only",
            "displayName": "Build Host Server Only",
            "configurePreset": "host-server-only"
        },
        {
            "name": "host-rtu-only",
            "displayName": "Build Host RTU Only",
            "configurePreset": "host-rtu-only"
        },
        {
            "name": "host-tcp-only",
            "displayName": "Build Host TCP Only",
            "configurePreset": "host-tcp-only"
        },
        {
            "name": "host-debug-examples",
            "displayName": "Build Host Debug (examples)",
            "configurePreset": "host-debug-examples"
        },
        {
            "name": "host-release",
            "displayName": "Build Host Release",
            "configurePreset": "host-release"
        },
        {
            "name": "host-footprint",
            "displayName": "Build Host Footprint",
            "configurePreset": "host-footprint"
        },
        {
            "name": "host-asan",
            "displayName": "Build Host Sanitizers",
            "configurePreset": "host-asan"
        },
        {
            "name": "host-tsan",
            "displayName": "Build Host ThreadSanitizer",
            "configurePreset": "host-tsan"
        },
        {
            "name": "host-coverage",
            "displayName": "Build Host Coverage",
            "configurePreset": "host-coverage"
        },
        {
            "name": "host-fuzz",
            "displayName": "Build Host Fuzzers",
            "configurePreset": "host-fuzz"
        },
        {
            "name": "mingw-debug",
            "displayName": "Build MinGW Debug",
            "configurePreset": "mingw-debug"
        },
        {
            "name": "mingw-release",
            "displayName": "Build MinGW Release",
            "configurePreset": "mingw-release"
        },
        {
            "name": "docs",
            "displayName": "Generate Documentation",
            "description": "Build Doxygen + Sphinx output",
            "configurePreset": "host-docs",
            "targets": [
                "doc"
            ]
        },
        {
            "name": "host-compat",
            "displayName": "Build Host Debug (compat)",
            "configurePreset": "host-compat"
        }
    ],
    "testPresets": [
        {
            "name": "all",
            "displayName": "Run ctest",
            "configurePreset": "host-debug"
        },
        {
            "name": "client-only",
            "displayName": "Run tests (client only)",
            "configurePreset": "host-client-only"
        },
        {
            "name": "server-only",
            "displayName": "Run tests (server only)",
            "configurePreset": "host-server-only"
        },
        {
            "name": "rtu-only",
            "displayName": "Run tests (RTU only)",
            "configurePreset": "host-rtu-only"
        },
        {
            "name": "tcp-only",
            "displayName": "Run tests (TCP only)",
            "configurePreset": "host-tcp-only"
        },
        {
            "name": "compat",
            "displayName": "Run tests (compat)",
            "configurePreset": "host-compat"
        }
    ]
}