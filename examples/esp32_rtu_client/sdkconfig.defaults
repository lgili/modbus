# ESP32 Project Configuration (sdkconfig.defaults)
#
# This file sets default values for ESP-IDF configuration options.
# These can be overridden with 'idf.py menuconfig'.

# FreeRTOS Configuration
CONFIG_FREERTOS_HZ=1000
CONFIG_FREERTOS_UNICORE=n
CONFIG_FREERTOS_USE_TRACE_FACILITY=y
CONFIG_FREERTOS_GENERATE_RUN_TIME_STATS=y

# UART Driver Configuration
CONFIG_UART_ISR_IN_IRAM=y

# ESP Timer Configuration
CONFIG_ESP_TIMER_TASK_STACK_SIZE=4096

# Logging Configuration
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_COLORS=y

# Compiler Options
CONFIG_COMPILER_OPTIMIZATION_SIZE=y
CONFIG_COMPILER_OPTIMIZATION_ASSERTIONS_ENABLE=y

# Memory Configuration
CONFIG_ESP_SYSTEM_EVENT_TASK_STACK_SIZE=2560

# Modbus Defaults (from Kconfig.projbuild)
CONFIG_MODBUS_UART_PORT=1
CONFIG_MODBUS_UART_TX_PIN=17
CONFIG_MODBUS_UART_RX_PIN=16
CONFIG_MODBUS_UART_BAUD_RATE=9600
CONFIG_MODBUS_SLAVE_ADDRESS=1
CONFIG_MODBUS_START_REGISTER=0x0000
CONFIG_MODBUS_REGISTER_COUNT=10
CONFIG_MODBUS_REQUEST_INTERVAL_MS=1000
CONFIG_MODBUS_LED_GPIO=2

# Modbus Function Codes
CONFIG_MODBUS_FC03_ENABLED=y
CONFIG_MODBUS_FC04_ENABLED=y
CONFIG_MODBUS_FC06_ENABLED=y
CONFIG_MODBUS_FC16_ENABLED=y

# Advanced Modbus Settings
CONFIG_MODBUS_POLL_BUDGET=8
CONFIG_MODBUS_RESPONSE_TIMEOUT_MS=500
CONFIG_MODBUS_RETRY_COUNT=2
