menu "Modbus quickstart"

config MODBUS_ZEPHYR_CLIENT_POOL_SIZE
    int "Client transaction pool size"
    range 1 32
    default 4
    help
        Number of transaction descriptors allocated by the quickstart helper.

config MODBUS_ZEPHYR_CLIENT_QUEUE_CAPACITY
    int "Client queue capacity override"
    range 0 32
    default 0
    help
        Optional override for mb_client_set_queue_capacity(). Leave zero to use
        the pool size.

config MODBUS_ZEPHYR_SOCKET_TIMEOUT_MS
    int "Socket receive timeout (ms)"
    range 0 5000
    default 20
    help
        Timeout passed to recv() when polling the TCP socket. A value of zero
        performs a pure non-blocking read.

config MODBUS_ZEPHYR_YIELD_MS
    int "Yield hint in milliseconds"
    range 0 20
    default 1
    help
        Delay used by the transport yield hook. Set to zero to call k_yield()
        instead of k_sleep().

endmenu
